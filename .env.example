# ── Server ──────────────────────────────────────────────
TTSWEB_HOST=0.0.0.0
TTSWEB_PORT=8100

# ── CORS ────────────────────────────────────────────────
# Comma-separated list of allowed origins
TTSWEB_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Models (Hugging Face IDs or local paths) ───────────
TTSWEB_MODEL_CUSTOM_VOICE=Qwen/Qwen3-TTS-12Hz-1.7B-CustomVoice
TTSWEB_MODEL_VOICE_DESIGN=Qwen/Qwen3-TTS-12Hz-1.7B-VoiceDesign
TTSWEB_MODEL_BASE=Qwen/Qwen3-TTS-12Hz-1.7B-Base
TTSWEB_MODEL_TOKENIZER=Qwen/Qwen3-TTS-Tokenizer-12Hz

# ── Runtime ─────────────────────────────────────────────
# Force mock mode (no GPU needed); auto-detected if omitted
TTSWEB_MOCK_MODE=false

# Max concurrent model inference jobs
TTSWEB_MAX_CONCURRENT_JOBS=4

# Max input text length in characters
TTSWEB_MAX_TEXT_LENGTH=10000

# Max audio upload size in MB (for voice clone)
TTSWEB_MAX_AUDIO_UPLOAD_MB=25

# Job result TTL in seconds before auto-cleanup
TTSWEB_JOB_TTL_SECONDS=3600

# ── Logging ─────────────────────────────────────────────
TTSWEB_LOG_LEVEL=info
